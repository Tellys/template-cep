<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Update Cart'); ?>
<?php if ($_product->isSaleable()): ?>
    <div class="add-to-cart addtocart">

            <label for="qty"><?php echo $this->__('Quantity') ?></label>
        <div class="pull-left qty">
            <div class="custom-qty pull-left">
                <button onclick="var result = document.getElementById('qty'); var qty = result.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 1 ) result.value--;return false;" class="reduced items  items-count" type="button">
                    <i class="fa fa-minus "></i>
                </button>
            </div>
        <?php if (!$_product->isGrouped()): ?>
        <input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
        <?php endif; ?>
            <div class="custom-qty pull-left">
                <button onclick="var result = document.getElementById('qty'); var qty = result.value; if( !isNaN( qty )) result.value++;return false;" class="increase items items-count" type="button">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
        </div>

        <div class="clearfix"></div>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
    <button type="button" title="<?php echo $buttonTitle ?>" class="button btn-cart" onclick="productAddToCartForm.submit(this)"><span><span><i class="fa mt-fa-shopping-cart"></i><?php echo $buttonTitle ?></span></span></button>
<?php endif; ?>
